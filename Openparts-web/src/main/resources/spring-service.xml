<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd"
    default-autowire="byName">

    <bean id="mongodbProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath:mongodb-config.properties</value>
            </list>
        </property>
    </bean>

    <bean id="mongodbDriver" class="com.openparts.utils.mongodb.MongoDBDriver" init-method="init" destroy-method="close">
        <property name="properties" ref="mongodbProperties"/>
        <property name="configuration">
            <bean class="com.openparts.utils.mongodb.MongoDBConfig">
                <property name="addresses" value="${mongodb.filesystem.addresses}"/>
                <property name="credentials">
                    <list>
                        <bean class="com.openparts.utils.mongodb.MongoDBCredential">
                            <property name="databaseName" value="${mongodb.filesystem.dbname}"/>
                            <property name="username" value="${mongodb.filesystem.username}"/>
                            <property name="password" value="${mongodb.filesystem.password}"/>
                        </bean>
                    </list>
                </property>

            </bean>

        </property>
    </bean>

    <bean id="gridFSClient" class="com.openparts.utils.mongodb.GridFSClient">
        <property name="mongoDBDriver" ref="mongodbDriver"/>
        <property name="databaseName" value="${mongodb.filesystem.dbname}"/>
    </bean>

</beans>
